{
  "node": {
    "id": "{{envOrDefault "ENVOY_NODE_ID" "default-node"}}",
    "cluster": "{{envOrDefault "ENVOY_NODE_CLUSTER" "default-cluster"}}",
    "locality": {
      "zone": "{{envOrDefault "ENVOY_NODE_ZONE" "default-zone"}}"
    }
  },
  "static_resources": {
    "listeners": [
      {
        "address": {
          "socket_address": {
            "protocol": "TCP",
            "address": "0.0.0.0",
            "port_value": 15090,
          }
        },
        "filter_chains": [{
          "filters": [{
            "name": "envoy.http_connection_manager",
            "config": {
              "codec_type": "AUTO",
              "stat_prefix": "stats",
              "route_config": {
                "virtual_hosts": [{
                  "name": "backend",
                  "domains": [
                    "*"
                  ],
                  "routes": [{
                    "match": {
                      "prefix": "/stats/prometheus"
                    },
                    "route": {
                      "cluster": "prometheus_stats"
                    }
                  }]
                }]
              },
              "http_filters": {
                "name": "envoy.router"
              }
            }
          }]
        }],
      },
    ],
    "clusters": [
      {
        "name": "xds",
        "type": "LOGICAL_DNS",
        "connect_timeout": {
          "seconds": "{{envOrDefault "ENVOY_XDS_CONNECT_TIMEOUT_SECS" "30"}}"
        },
        "lb_policy": "ROUND_ROBIN",
        "hosts": [
          {
            "socket_address": {
              "protocol": "TCP",
              "address": "{{envOrDefault "ENVOY_XDS_HOST" "127.0.0.1"}}",
              "port_value": "{{envOrDefault "ENVOY_XDS_PORT" "50000"}}"
            }
          }
        ],
        "http2_protocol_options": {
          "max_concurrent_streams": 10
        },
        "upstream_connection_options": {
          "tcp_keepalive": {
            "keepalive_probes": {
              "value": {{envOrDefault "ENVOY_XDS_KEEPALIVE_PROBES" "3"}}
            },
            "keepalive_time": {
              "value": {{envOrDefault "ENVOY_XDS_KEEPALIVE_TIME_SECS" "30"}}
            },
            "keepalive_interval": {
              "value": {{envOrDefault "ENVOY_XDS_KEEPALIVE_INTERVAL_SECS" "15"}}
            }
          }
        }
      },
      {
        "name": "prometheus_stats",
        "type": "STATIC",
        "connect_timeout": "0.250s",
        "lb_policy": "ROUND_ROBIN",
        "hosts": [{
          "socket_address": {
            "protocol": "TCP",
            "address": "127.0.0.1",
            "port_value": 9999,
        }
      }],
    }
    ]
  },
  "dynamic_resources": {
    "lds_config": {
      "api_config_source": {
        "api_type": "GRPC",
        "grpc_services": [
          {
            "envoy_grpc": {
              "cluster_name": "xds"
            }
          }
        ],
        "refresh_delay": {
          "seconds": {{envOrDefault "ENVOY_XDS_REFRESH_DELAY_SECS" "10"}}
        }
      }
    },
    "cds_config": {
      "api_config_source": {
        "api_type": "GRPC",
        "grpc_services": [
          {
            "envoy_grpc": {
              "cluster_name": "xds"
            }
          }
        ],
        "refresh_delay": {
          "seconds": {{envOrDefault "ENVOY_XDS_REFRESH_DELAY_SECS" "10"}}
        }
      }
    }
  },
  "admin":{
    "access_log_path": "{{envOrDefault "ENVOY_ADMIN_LOG" "/dev/stdout"}}",
    "address": {
      "socket_address": {
        "protocol": "TCP",
        "address": "{{envOrDefault "ENVOY_ADMIN_IP" "0.0.0.0"}}",
        "port_value": "{{envOrDefault "ENVOY_ADMIN_PORT" "9999"}}"
      }
    }
  }
{{- if envOrDefault "JAEGER_AGENT_HOST" "" }}
  ,"tracing":{
    "http": {
      "name": "envoy.dynamic.ot",
      "typed_config": {
        "@type": "type.googleapis.com/envoy.config.trace.v2.DynamicOtConfig",
        "library": "/usr/local/lib/libjaegertracing_plugin.so",
        "config": {
          "service_name": "{{envOrDefault "ENVOY_NODE_CLUSTER" "default-cluster"}}",
          "sampler": {
            "type": "const",
            "param": 1
          },
          "reporter": {
            "localAgentHostPort": "{{envOrDefault "JAEGER_AGENT_HOST" "jaeger"}}:{{envOrDefault "JAEGER_AGENT_PORT" "6831"}}"
          },
          "headers": {
            "jaegerDebugHeader": "jaeger-debug-id",
            "jaegerBaggageHeader": "jaeger-baggage",
            "traceBaggageHeaderPrefix": "uberctx-"
          },
          "baggage_restrictions": {
            "denyBaggageOnInitializationFailure": false,
            "hostPort": ""
          }
        }
      }
    }
  }
{{- end }}
}
